<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.hebeu.dao.IItemsDao">

    <select id="selectItems" resultType="items">
        SELECT id, name, price, pic, createtime, detail FROM items;
    </select>

    <select id="selectItem" parameterType="int" resultType="items">
        SELECT id, name, price, pic, createtime, detail FROM items WHERE id = #{随便写};
    </select>
</mapper>